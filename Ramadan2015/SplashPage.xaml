<Page
    x:Class="Ramadan2015.SplashPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ramadan2015"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" RequestedTheme="Dark">
	<Page.Background>
		<ImageBrush Stretch="UniformToFill" ImageSource="Assets/Resources/BG.jpg"/>
	</Page.Background>

	<Grid>
		<Grid.Background>
			<ImageBrush Stretch="Uniform" ImageSource="Assets/Resources/logo.png"/>
		</Grid.Background>
		<Grid.RowDefinitions>
			<RowDefinition Height="4*"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<StackPanel Orientation="Vertical" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" >
			<ProgressRing IsActive="True" Background="{x:Null}"  Foreground="White" HorizontalAlignment="Center" />
			<TextBlock x:Name="_state" FontSize="{StaticResource TextStyleMediumFontSize}" HorizontalAlignment="Center" FontFamily="Assets/Font/Barkentina 1.otf#Barkentina Test"/>
		</StackPanel>
	</Grid>
</Page>
