<Page
    x:Class="Ramadan2015.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ramadan2015"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Page.Background>
		<ImageBrush Stretch="UniformToFill" ImageSource="Assets/Resources/BG.jpg"/>
	</Page.Background>

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="11*"/>
		</Grid.RowDefinitions>

		<Grid x:Name="_headingGrid" Margin="0 0 0 0" Grid.Row="0">
			<StackPanel>
				<TextBlock x:Uid="AppName" FontSize="{StaticResource TextStyleExtraExtraLargeFontSize}" Foreground="White"/>
			</StackPanel>
		</Grid>
		
		<Grid Grid.Row="1" Background="#4C000000">
				<ScrollViewer Margin="10">
					<StackPanel>
						<TextBlock x:Uid="AboutHeading" TextWrapping="Wrap" Margin="0,5,0,10" FontSize="{StaticResource TextStyleExtraLargeFontSize}" Foreground="White"/>
						<TextBlock x:Uid="Aboutdetails" TextWrapping="Wrap" FontSize="{StaticResource TextStyleLargeFontSize}" Foreground="White" Margin="0,41,0,32"/>
						<TextBlock x:Uid="AboutCredit" TextWrapping="Wrap" Margin="0,10,0,0" FontSize="{StaticResource TextStyleLargeFontSize}" Foreground="White"/>

					</StackPanel>
				</ScrollViewer>

		</Grid>
	</Grid>
</Page>
